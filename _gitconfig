[push]
    default = simple
[diff]
    tool = vimdiff
[difftool]
    prompt = false
    trustExitCode = true
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
    conflictstyle = diff3
[alias]
    vd = difftool
    vm = mergetool
    lg = log --graph --decorate --all
    dl = diff HEAD~1 HEAD
    vdl = difftool HEAD~1 HEAD
